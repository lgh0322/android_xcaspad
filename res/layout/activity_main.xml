<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <WebView
            android:id="@+id/webViewMath"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout android:layout_weight="1" 
        android:id="@+id/linearLayout" 
        android:layout_height="wrap_content" 
        android:weightSum="1" 
        android:layout_width="fill_parent" 
        android:orientation="horizontal">

        <org.giac.calculator.input.CalculatorInputTextView
            android:id="@+id/autoCompleteFormulaMath"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="none|text|textMultiLine|textWebEditText" >

            <requestFocus />
        </org.giac.calculator.input.CalculatorInputTextView>

        <ImageButton
            android:id="@+id/btnExecuteCalc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/doit" />
        
    </LinearLayout>
</LinearLayout>
